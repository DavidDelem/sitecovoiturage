<div class="container profil-container">
  <div class="row justify-content-center">
        <div class="col-lg-4">
          <div class="profil-picture-container">
            <div class="profil-picture">
              <% if @member.image %>
                  <%= image_tag (Rails.root+"app/assets/images/profil/"+@member.image)%>
              <% else %>
                  <img src="http://cdn.cnn.com/cnnnext/dam/assets/161010191224-barack-obama-hedshot-large-169.jpg">
            <% end %>
            </div>
          </div>
          <div class="profil-details-container">
            <h2>Informations</h2>
            <p><span>Age:</span> 21 ans</p>
            <p><span>Ville:</span> Chicoutimi</p>
            <p><span>Véhicule:</span> <%= @member.vehicule_type %></p>
            <p><span>Année:</span> <%= @member.vehicule_annee %></p>
          </div>
          <div class="profil-conf-container">
            <% if current_member != nil && @member.id == current_member.id %>
                <h2>Configuration</h2>
                <p><%= link_to "Mettre à jours mon profil", edit_member_registration_path, class: 'btn btn-primary' %></p>
                <p><%= link_to "Supprimer mon compte", edit_member_registration_path, class: 'btn btn-danger' %></p>
            <% end %>
          </div>
        </div>
        <div class="col-lg-8">
          <h1 class="title-section"><%= @member.prenom %> <%= @member.nom %></h1>
          <div class="presentation">
            <p><%= @member.presentation %></p>
          </div>
        <div>

        <i class="fa fa-star" aria-hidden="true"></i>
        <%= @moyenneNotes %>/5 <br>
        <h5>Avis : </h5>
        <% @member.trajets.each do |trajet| %>
          <% trajet.covoiturages.each do |covoiturage| %>
              <div class="avis-elem">
                <div class="row">
                  <div class="col">
                    <b><p>
                    <%= case covoiturage.note
                          when 1
                            "A éviter"
                          when 2
                            "Décevant"
                          when 3
                            "Bien"
                          when 4
                            "Très bien"
                          when 5
                            "Parfais"
                        end

                    %>
                    </p></b>
                    <p>
                      <%= covoiturage.avis %>
                    </p>
                  </div>
                </div>
              </div>
          <% end %>
        <% end %>

          </div>
        </div>

  </div>
</div>